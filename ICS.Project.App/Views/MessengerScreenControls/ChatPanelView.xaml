<base:UserControlCustom x:Class="ICS.Project.App.Views.MessengerScreenControls.ChatPanelView"
                         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                         xmlns:local="clr-namespace:ICS.Project.App.Views"
                         xmlns:viewModels="clr-namespace:ICS.Project.App.ViewModels"
                         xmlns:views="clr-namespace:ICS.Project.App.Views"
                         xmlns:chatPanelControls="clr-namespace:ICS.Project.App.Views.MessengerScreenControls.ChatPanelControls"
                         xmlns:messengerScreenViewModels="clr-namespace:ICS.Project.App.ViewModels.MessengerScreenViewModels"
                         xmlns:chatPanelViewModels="clr-namespace:ICS.Project.App.ViewModels.MessengerScreenViewModels.ChatPanelViewModels"
                         xmlns:base="clr-namespace:ICS.Project.App.Views.Base"
                         mc:Ignorable="d"
                         d:DataContext="{d:DesignInstance messengerScreenViewModels:ChatViewModel}"
                         DataContext="{Binding Source={StaticResource ViewModelLocator}, Path=ChatViewModel}">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="10" >
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <chatPanelControls:UserInitialsCircleView DataContext="{Binding NewPostViewModel}" />
                    <StackPanel>
                        <TextBox x:Name="TitleTextBox" Text="{Binding NewPostViewModel.Post.Title, UpdateSourceTrigger=PropertyChanged}" Width="90" HorizontalAlignment="Left" TextWrapping="Wrap" AcceptsReturn="True" Margin="2"/>
                        <TextBox x:Name="MessageTextBox" Text="{Binding NewPostViewModel.Post.MessageText, UpdateSourceTrigger=PropertyChanged}" Width="300" TextWrapping="Wrap" AcceptsReturn="True" Margin="2"/>
                    </StackPanel>
                    <Button Content="Send" Command="{Binding AddNewPostCommand}" Height="20" Margin="10,0,10,0"/>
                </StackPanel>
                <ItemsControl ItemsSource="{Binding PostViewModels}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <chatPanelControls:PostView DataContext="{Binding}" />
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</base:UserControlCustom>
